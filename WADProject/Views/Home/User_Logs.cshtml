@model IEnumerable<WADProject.Models.logsModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

      <div class="full-page" id="blur">
        <div class="center">
            <div class="navbar">
                <nav>
                    <a class="navitem" href="~/Home/Donor">Donor</a>

                    <a class="navitem" href="~/Home/Recipient">Recipient</a>

                    <a class="navitem" href="~/Home/Blood_collection">Blood Collection</a>

                    <a class="navitem" href="~/Home/Blood_request">Blood Request</a>

                    <a class="navitem" href="~/Home/Blood_issued">Blood Issued</a>

                    <a class="navitem" href="~/Home/User_accounts">User Accounts</a>

                    <a class="navitem bb" href="~/Home/User_logs">User Logs</a>
                </nav>
            </div>
            <hr id="hr1" size="1" width="100%" />
            <br><br>

<div class="tableheader">
                <p id="table-p">User Logs Table</p>
            </div>
            <hr id="hr2" size="1" width="100%" />
            <div class="tblbox">
                <br> <div style="height:12px "></div>
                <div id="utility">
                    <button class="redbtn" onclick="" style="width:90px"> <img src="~/assets/images/trash-sharp.svg"> Clear Data</button>
                    @using (Html.BeginForm(FormMethod.Get, new{ style="float:right;padding-top:6px" }))
                    {
                        @Html.TextBox("search", null, new{ @placeholder = " Search by Account Name", @style="height:28px"})
                        <input type="submit" value="Search" class="sbmtbtn"/>
                    }
                </div>
                <table>
                    <tr>
                        <th>Account Name</th>
                        <th>Date</th>
                        <th>Login Time</th>
                        <th>Logout Time</th>
                    </tr>
                    @if(Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="4">Data is Empty or not Available</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model) 
                        {   
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.loginTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.logoutTime)
                                </td>
                            </tr>
                         }
                    }
                </table>
            </div>
   </div>
 </div>
