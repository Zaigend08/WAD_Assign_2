@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<WADProject.Models.DonorModel>

      <div class="full-page" id="blur">
        <div class="center">
            <div class="navbar">
                <nav>
                    <a class="navitem bb" href="~/Home/Donor">Donor</a>

                    <a class="navitem" href="~/Home/Recipient">Recipient</a>

                    <a class="navitem" href="~/Home/Blood_collection">Blood Collection</a>

                    <a class="navitem" href="~/Home/Blood_request">Blood Request</a>

                    <a class="navitem" href="~/Home/Blood_issued">Blood Issued</a>

                    <a class="navitem" href="~/Home/User_accounts">User Accounts</a>

                    <a class="navitem" href="~/Home/User_logs">User Logs</a>
                </nav>
            </div>
            <hr id="hr1" size="1" width="100%" />
            <br><br>

        <div class="tableheader">
           <p id="table-p">Donor Table</p>
         </div>
            <hr id="hr2" size="1" width="100%" />
            <div class="tblbox">
                <br> <div style="height:12px "></div>
                <div id="utility">
                    <button class="grnbtn" onclick="openForm()"><b>+</b> Add</button>
                    @using (Html.BeginForm(FormMethod.Get, new{ style="float:right;padding-top:6px" }))
                    {
                        @Html.TextBox("search", null, new{ @placeholder = " Search by Donor", @style="height:28px"})
                        <input type="submit" value="Search" class="sbmtbtn"/>
                    }
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Donor</th>
                            <th>Address</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>BloodType</th>
                            <th>Remarks</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="9">Data is Empty or not Available</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model) 
                            {   
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Donor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dContact)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dAge)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dGender)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dBloodType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dRemarks)
                                    </td>
                                    <td id="tdbtn">
                                        <div class="grnbtn">
                                            @Html.ActionLink("Edit", "EditDonor", new { id = item.DonorId})
                                        </div>
                                        <div class="redbtn">
                                            @Html.ActionLink("Delete", "DeleteDonor", new { id = item.DonorId})
                                        </div>
                                    </td>
                                </tr>
                             }
                        }
                    </tbody>
                    
                </table>
               
            </div>
    
    </div>
 </div>
     <div id="popupScreen">
         <img src="~/assets/images/close-circle-sharp.svg" onclick="openForm()" style="position:absolute;cursor:pointer;top:-4px;right:-3px" >
        <h1 style="margin-left:34%">Add Donor</h1> <br>
            @using (@Html.BeginForm(method:FormMethod.Post))
            {
                <div class ="row">
                    <label for="Donor">Fullname</label> <br />
                    <label for="dAddress" style="margin-left:-18px">Address</label> <br>
                </div>
                <div class ="row">
                    <input type="text" name="Donor" placeholder="Enter Donor Fullname" required>
                    <input type="text" name="dAddress" placeholder="Enter Donor Address" style="margin-left:18%" required> <br>
                </div> <br />
                <div class ="row">
                    <label for="dContact">Contact:</label><br>
                    <label for="dEmail" style="margin-left:-28px">Email:</label> <br>
                </div>
                <div class ="row">
                    <input type="number" name="dContact" placeholder="Enter Donor Contact" required> 
                    <input type="email" name="dEmail" placeholder="Enter Donor Email" style="margin-left:18%" pattern="^[a-zA-Z0-9_\.-]+@@([a-zA-Z0-9-]+\.)+[a-zA-Z]{2,6}$" required >
                </div> <br />
                <div class = "row">
                    <label for="dAge" style="margin-right:15px">Age</label><br>
                    <label for="dGender">Gender</label> <br>
                    <label for="dBloodtype">Blood Type</label><br>
                    <label for="dRemarks">Remarks</label><br>
                </div>
                <div class = "row">
                    <input style="width:62px" type="number" name="dAge" placeholder="Age" required> <br>
                    <select name="dGender" style="margin-left:-24%" required>
                        <option value="Male" selected>Male </option>
                        <option value="Female">Female</option>
                    </select> 
                    <select name="dBloodtype" style="margin-left:-5%;width:70px" required>
                        <option value="O" selected>O </option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="AB">AB</option>
                    </select> 
                    <input style="width:62px;margin-right:-40px" type="text" name="dRemarks" placeholder="Remarks" required> <br>
                </div> <br /> 
                <!---------------------------------------->
                <input type="submit" value="Submit" style="margin-left:43%" class="sbmtbtn" />
            }
    </div>
