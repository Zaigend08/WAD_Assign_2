@model IEnumerable<WADProject.Models.BloodCollectionModel>
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Blood Bank Managment System</title>
    <link rel="stylesheet" href="~/css/style.css">
    <!-- favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/images/BB_favicon.png">
    <!--         -->
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> -->
</head>

<body>
    <header>
        <!--inline -->
        <img src="~/assets/images/logo.png" alt="Logo" style="height: 60%; width: 2.8%;padding : 9px 0px 0px 5px; margin-bottom: -2px">
        <h2>
            Blood Bank Managment
        </h2>
        <img src="~/assets/images/person-circle-sharp.svg"
            style="padding : 8px 0.5px 0px 61%;margin-bottom: -5px;">
        <p id="sample-user">Sample User</p>

    </header>
      <div class="full-page" id="blur">
        <div class="center">
<div class="navbar">
                <nav>
                    <a class="navitem" href="~/Home/Donor">Donor</a>

                    <a class="navitem" href="~/Home/Recipient">Recipient</a>

                    <a class="navitem bb" href="~/Home/Blood_collection">Blood Collection</a>

                    <a class="navitem" href="~/Home/Blood_request">Blood Request</a>

                    <a class="navitem" href="~/Home/Blood_issued">Blood Issued</a>

                    <a class="navitem" href="~/Home/User_accounts">User Accounts</a>

                    <a class="navitem" href="~/Home/User_logs">User Logs</a>
                </nav>
            </div>
            <hr id="hr1" size="1" width="100%" />
            <br><br>

<div class="tableheader">
                <p id="table-p">Blood Collection Table</p>
            </div>
            <hr id="hr2" size="1" width="100%" />
            <div class="tblbox">
                <br> <div style="height:12px "></div>
                <div id="utility">
                    <button class="grnbtn" onclick="openForm()"><b>+</b> Add</button>
                    <input type="text" placeholder=" Search" style="float:right; height: 30px;">
                </div>
                <table>
                    <tr>
                        <th>Donor Name</th>
                        <th>Hospital</th>
                        <th>Blood Type</th>
                        <th>No Of Bags</th>
                        <th>Date Collection</th>
                        <th>Action</th>
                    </tr>
                    @if(Model != null)
                     {
                         @foreach (var item in Model) 
                        {   
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.donor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hospital)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.bldType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.noOfBags)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dateOfCollection)
                                </td>
                                <td id="tdbtn">
                                    <button type="button" class="grnbtn">Edit</button>
                                    <button type="button" class="redbtn">Close</button>
                                </td>
                            </tr>
                         }
                     }
                     else{
                         <tr> 
                             <td> Their is no data in this table</td>
                         </tr>
                     }
                </table>
            </div>
   </div>
 </div>
     <div id="popupScreen">
         <img src="~/assets/images/close-circle-sharp.svg" onclick="openForm()" style="position:absolute;cursor:pointer;top:-4px;right:-3px" >
        <h1 style="margin-left:34%">Add Collection</h1> <br>
        <form method="post" onsubmit="return validateForm()">
            <div class ="row">
                <label for="Donor">Donor</label> <br />
                <label for="Hospital" style="margin-left:-90px">Hospital</label> <br>
            </div>
            <div class ="row">
                <select name="dropdown" asp-for="Donor" style="width:35%">
                    <option value="d1" selected>Data 1 </option>
                    <option value="d2">Data 2</option>
                </select> 
                <input type="text" asp-for="Hospital" placeholder="Enter Hospital" style="margin-right:-20%;width:50%"> <br>
            </div> <br />
            <div class = "row">
                <label for="noOfBags" style="margin-right:15px">No Of Bags</label><br>
                <label for="dateOfCollection">Date Collection</label> <br>
                <label for="dBloodtype">Blood Type</label><br>
            </div>
            <div class = "row">
                <input style="width:62px" type="number" asp-for="noOfBags" placeholder="No." > <br>
                <input style="width:110px;margin-left:30px" asp-for="dateOfCollection" > <br>
                <select name="dropdown" asp-for="dBloodtype" style="margin-right:7%;width:70px">
                    <option value="O" selected>O </option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="AB">AB</option>
                </select> 
            </div> <br /> <br />
            <!---------------------------------------->
            <button style="margin-left:43%" class="sbmtbtn" onsubmit="openForm()">Submit</button>
        </form>
    </div>

    
    <script src="~/js/scripts.js"></script>
</body>

</html>