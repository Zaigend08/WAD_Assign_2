@model IEnumerable<WADProject.Models.RecipientModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

      <div class="full-page" id="blur">
        <div class="center">
<div class="navbar">
                <nav>
                    <a class="navitem " href="~/Home/Donor">Donor</a>

                    <a class="navitem bb" href="~/Home/Recipient">Recipient</a>

                    <a class="navitem" href="~/Home/Blood_collection">Blood Collection</a>

                    <a class="navitem" href="~/Home/Blood_request">Blood Request</a>

                    <a class="navitem" href="~/Home/Blood_issued">Blood Issued</a>

                    <a class="navitem" href="~/Home/User_accounts">User Accounts</a>

                    <a class="navitem" href="~/Home/User_logs">User Logs</a>
                </nav>
            </div>
            <hr id="hr1" size="1" width="100%" />
            <br><br>

<div class="tableheader">
                <p id="table-p">Recepient Table</p>
            </div>
            <hr id="hr2" size="1" width="100%" />
            <div class="tblbox">
                <br> <div style="height:12px "></div>
                <div id="utility">
                    <button class="grnbtn" onclick="openForm()"><b>+</b> Add</button>
                    @using (Html.BeginForm(FormMethod.Get, new{ style="float:right;padding-top:6px" }))
                    {
                        @Html.TextBox("search", null, new{ @placeholder = " Search by Recipient", @style="height:28px"})
                        <input type="submit" value="Search" class="sbmtbtn"/>
                    }
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Recipient</th>
                            <th>Address</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>BloodType</th>
                            <th>Remarks</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                     @if(Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="9">Data is Empty or not Available</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model) 
                        {   
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Recipient)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rContact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rAge)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rGender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rBloodType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rRemarks)
                            </td>
                            <td id="tdbtn">
                                <div class="grnbtn">
                                    @Html.ActionLink("Edit", "EditRecipient", new { id = item.RecipientId})
                                </div>
                                <div class="redbtn">
                                    @Html.ActionLink("Delete", "DeleteRecipient", new { id = item.RecipientId})
                                </div>
                            </td>
                        </tr>
                        }
                    }
                    </tbody>
                    
                </table>
            </div>
   </div>
 </div>
     <div id="popupScreen">
         <img src="~/assets/images/close-circle-sharp.svg" onclick="openForm()" style="position:absolute;cursor:pointer;top:-4px;right:-3px" >
        <h1 style="margin-left:34%">Add Recipient</h1> <br>
        <form method="post" onsubmit="return validateForm()">
            <div class ="row">
                <label for="Recipient">Fullname</label> <br />
                <label for="rAddress" style="margin-left:-18px">Address</label> <br>
            </div>
            <div class ="row">
                <input type="text" name="Recipient" placeholder="Enter Recipient Fullname" required>
                <input type="text" name="rAddress" placeholder="Enter Recipient Address" style="margin-left:18%" required> <br>
            </div> <br />
            <div class ="row">
                <label for="rContact">Contact:</label><br>
                <label for="rEmail" style="margin-left:-28px">Email:</label> <br>
            </div>
            <div class ="row">
                 <input type="number" name="rContact" placeholder="Enter Recipient Contact" required> 
                 <input type="email" name="rEmail" placeholder="Enter Recipient Email" style="margin-left:18%" required>  
            </div> <br />
            <div class = "row">
                <label for="rAge" style="margin-right:15px">Age</label><br>
                <label for="rGender">Gender</label> <br>
                <label for="rBloodtype">Blood Type</label><br>
                <label for="rRemarks">Remarks</label><br>
            </div>
            <div class = "row">
                <input style="width:62px" type="number" name="rAge" placeholder="Age" required> <br>
                <select name="rGender" style="margin-left:-24%" required>
                    <option value="Male" selected>Male </option>
                    <option value="Female">Female</option>
                </select> 
                <select name="rBloodtype" style="margin-left:-5%;width:70px"required>
                    <option value="O">O </option>
                    <option value="A">A</option>
                    <option value="B" selected>B</option>
                    <option value="AB">AB</option>
                </select> 
                <input style="width:62px;margin-right:-40px" type="text" name="rRemarks" placeholder="Remarks" required > <br>
            </div> <br /> 
            <!---------------------------------------->
            <button style="margin-left:43%" class="sbmtbtn" onsubmit="openForm()">Submit</button>
        </form>
    </div>
